#!/bin/bash -e

. ~/dotfiles/bin/dffunc
require dfdeploy

aptinstall libpoppler-glib-dev libpoppler-private-dev mew
dfx pip3 install --user jedi pyflakes virtualenv setuptools
dfx sudo openssl req -new -out /etc/stunnel/mail.crt \
    -keyout /etc/stunnel/mail.key -nodes -x509 -days 365 \
    -subj "/C=JP/ST=Tokyo/O=noyuno/CN=noyuno.github.io"
dfx sudo cp /usr/share/doc/stunnel4/examples/stunnel.conf-sample \
    /etc/stunnel/stunnel.conf

finalize dfemacs

