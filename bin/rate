#!/bin/bash -e

cache="$HOME/.cache/rate"
(
    echo USDJPY
    if [ -e "$cache" ]; then
        cat "$cache"
    else
        touch "$cache"
    fi
    (
    while true; do
        curl -sL 'http://www.gaitameonline.com/rateaj/getrate' | \
            jq -r '.[] | map(select(.currencyPairCode == "USDJPY"))[] | .ask'
        sleep 300
    done
    ) | tee -a "$cache"
) | termeter

