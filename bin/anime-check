#!/bin/bash -e

list="$HOME/dotfiles/list/anime-keyword"
matched=
month=$(date +%m | sed 's/^0//')

help()
{
    name=${0##*/}
    {
        cat << EOF
$name -hn
-h: Print help
-n: Print Next season anime
EOF
    } 1>&2
    exit 1
}

while getopts hn item; do
    case $item in
        h) help ;;
        n) month=$(((month + 2) % 12 + 1)) ;;
        *) query="[$item]"; shift ;;
    esac
    shift
done

case "$month" in
    1|2|3)    query="[$(date +%Y)冬]" ;;
    4|5|6)    query="[$(date +%Y)春]" ;;
    7|8|9)    query="[$(date +%Y)夏]" ;;
    10|11|12) query="[$(date +%Y)秋]" ;;
esac
echo $query


_loop()
{
    notlist=""
    while read i; do
        if [ ! "$i" ]; then
            continue
        fi
        if [ "$query" = "$i" ]; then
            matched=1
            continue
        fi
        if [ "$matched" ]; then
            if [[ "$i" =~ ^\[.*\]$ ]]; then
                break
            fi
            output=$(anime -as "$i") &&:
            ret=$?
            echo -en "$output" | grep -v "次の番組" &&:
            if [ $ret -ne 0 ]; then
                if [ "$notlist" ]; then
                    notlist="$notlist
$i"
                else
                    notlist="$i"
                fi
            fi
        fi
    done

    if [ "$notlist" ]; then
        echo -e "\e[33m[ not ]\e[m"
        echo "$notlist" | while read i; do
            echo "$i"
        done
    fi
}

cat "$list" | _loop


