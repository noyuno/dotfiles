#!/bin/bash -e

base=$HOME/pass

pushd $base >/dev/null
    for i in $(find . -type d \( \
        -name "vc" \
        -o -name "mutt" \
        -o -name ".mutt" \
        -o -name ".offlineimap" \
        -o -name "ssh" \
        \) -prune -o -type f -name '*.gpg' | sort); do
        name=${i#./}
        name2=${name%.gpg}
        if [ -f $name ]; then
            echo -n $name2','
            gpg2 -qd $name | tr -d '\n'
            echo
        fi
    done
popd >/dev/null

