#!/bin/bash -e

file="$(date +%Y%m%d).md"
if [ $# -gt 1 ]; then
    echo "too many arguments" >&2
    exit 1
elif [ $# -eq 1 ]; then
    file=$1
fi

new=0
if [ ! -f "$file" ]; then
    new=1
    cat << EOF > $file
# $(date +%Y/%m/%d)



EOF
fi

if [ "$new" -eq 1 ]; then
    if [[ "$EDITOR" =~ ^(vi|emacs|nvim).* ]]; then
        $EDITOR +3 "$file"
    else
        $EDITOR "$file"
    fi
else
    $EDITOR "$file"
fi

