#!/bin/bash -e

help()
{
    {
        name=${0##*/}
        cat << EOF
Usage: $name [-m|--markdown] name
EOF
    } 1>&2
    exit 1
}

args=$(getopt -o mh -l markdown -l help -- $*)
set -- $args

md=0

while [ $# -gt 0 ]; do
    case $1 in
    --) shift; break ;;
    -m|--markdown) md=1 ;;
    -h|--help) help ;;
    esac
    shift
done

dir=$(echo $* | sed "s/'//g")

if [ $# -eq 0 ]; then
    dir=$(date +%Y%m%d)
    echo "assuming: $dir"
fi

if [ -d "$dir" ]; then
    echo "already exists: $dir" >&2
    exit 17
fi

mkdir -p "$dir"

#cp -R ~/dotfiles/report/*.sty ~/dotfiles/report/*.tex ~/dotfiles/report/Makefile "$dir"
find ~/dotfiles/report -type f \( -name "*.tex" -o -name "*.sty" -o -name "Makefile" -o -name ".gitignore" \) -not -name reportc.tex | \
    xargs -i cp {} "$dir"

if [ "$md" -eq 0 ]; then
    touch "$dir/report.md"
    sed -i 's/\\input{reportc}/%\\input{reportc}/' "$dir/report.tex"
fi

