#!/bin/bash -e

# nVidia graphic card

if ! grep '^\[multilib\]' /etc/pacman.conf; then
    cat << EOF | sudo tee -a /etc/pacman.conf
[multilib]
Include = /etc/pacman.d/mirrorlist
EOF
fi
yaourt -Syu --noconfirm
yaourt -S --noconfirm steam nvidia lib32-nvidia-libgl nvidia-settings \
    lib32-libxtst lib32-gtk2 lib32-libpulse lib32-gdk-pixbuf2 lib32-libva \
    lib32-libvdpau lib32-openal
sudo nvidia-xconfig
echo "Please reboot before playing"

