#!/bin/bash -e

# nVidia graphic card

if ! grep '^\[multilib\]' /etc/pacman.conf; then
    cat << EOF | sudo tee -a /etc/pacman.conf
[multilib]
Include = /etc/pacman.d/mirrorlist
EOF
fi
yaourt -Syu --noconfirm
. $HOME/dotfiles/arch/list/packages
yaourt -S --noconfirm $steam
sudo nvidia-xconfig
echo "Please reboot before playing"

