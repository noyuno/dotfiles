#!/bin/bash -e
. ~/dotfiles/ubuntu/bin/dffunc 
require dfguiinstall

aptinstall \
    latexmk \
    pandoc \
    perl-tk \
    texlive-lang-japanese \
    texlive-latex-extra \
    texlive-science \
    xzdec

aptremove 'tex.*-doc$'

dfx sudo kanji-config-updmap-sys ipaex
dfx kanji-config-updmap -sys ipaex

if [ ! -e ~/SourceHanSansJ-LaTeX ]; then
    dfx git clone 'https://github.com/noyuno/latex-fonts.git' ~/SourceHanSansJ-LaTeX
    dfx cd ~/SourceHanSansJ-LaTeX
else
    dfx cd ~/SourceHanSansJ-LaTeX
    dfx git pull
fi
dfx ./install.sh
dfx cd

set +e
dfx tlmgr init-usertree
set -e
finalize dftex

