#!/bin/bash -e

. $HOME/dotfiles/ubuntu/bin/dffunc
require dfinstall

export CLOUD_SDK_REPO="cloud-sdk-$(lsb_release -c -s)"
if [ ! -e /etc/apt/sources.list.d/google-cloud-sdk.list ]; then
    dfx echo "deb https://packages.cloud.google.com/apt $CLOUD_SDK_REPO main" '|' \
        sudo tee -a /etc/apt/sources.list.d/google-cloud-sdk.list
fi
dfx curl -sL https://packages.cloud.google.com/apt/doc/apt-key.gpg '|' \
    sudo apt-key add -
aptupdate
aptinstall google-cloud-sdk

