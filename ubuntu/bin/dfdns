#!/bin/bash -e

. $HOME/dotfiles/ubuntu/bin/dffunc
require dfinstall

aptinstall unbound

resolvconf=/etc/resolvconf/resolv.conf.d/base
dfx sudo bash -c "cat >$resolvconf" << 'EOF'
nameserver localhost
options single-request-reopen
EOF

dfx sudo cp $HOME/dotfiles/unbound.conf /etc/unbound/unbound.conf

finalize dfdns

