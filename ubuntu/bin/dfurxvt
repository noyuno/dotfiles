#!/bin/bash -e

. ~/dotfiles/bin/dffunc

sync()
{
    if [ -d $2 ]; then
        dfx git pull
    else
        dfx git clone --depth 1 https://github.com/$1 $2
    fi
}

aptinstall libperl-dev

sync exg/rxvt-unicode $HOME/rxvt-unicode
dfx cd $HOME/rxvt-unicode
sync enki/libev libev
sync yusiwen/libptytty.git libptytty
dfx ./autogen.sh
dfx ./configure --prefix=/usr/local --enable-everything
dfx make
dfx sudo make install

