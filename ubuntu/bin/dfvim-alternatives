#!/bin/bash -e

if [ $# -ne 1 ]; then
    echo "dfvim-alternatives /usr/bin/vim" >&2
    exit 1
fi

vim=$1

sudo update-alternatives --install /usr/bin/editor editor $vim 60
sudo update-alternatives --install /usr/bin/vi vi $vim 60
sudo update-alternatives --install /usr/bin/vim vim $vim 60

sudo update-alternatives --set editor $vim
sudo update-alternatives --set vi $vim
sudo update-alternatives --set vim $vim

